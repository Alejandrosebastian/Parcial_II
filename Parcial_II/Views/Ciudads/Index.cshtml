@model IEnumerable<Parcial_II.Models.Ciudad>

@{
    ViewData["Title"] = "LIsta de ciudades";
}

<h2>Lista ciudad</h2>

<p>
    <a href="#" data-toggle="modal" data-target="#Ingresociudad">Ingrese una ciudad</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="ListaCiudad"></tbody>
</table>
<div class="modal fade" id="Ingresociudad" tabindex="-1" role="dialog" aria-labelledby="EtiquetaModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title"
                    id="EtiquetaModal">
                    Propietarios
                </h4>
            </div>
            <div class="modal-body">

                <form>
                    <div class="form-group">
                        <label class="control-label">Nombre</label>
                        <input id="Nombre1" name="Nombre"
                               placeholder="Ingrese el nombre"
                               class="form-control" />
                        <input id="CiudadId" name="CiudadId" hidden />
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="grabaCiudad()">
                    Guardar
                </button>
            </div>
        </div>
    </div>
</div>

