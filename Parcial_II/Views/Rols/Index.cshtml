@model IEnumerable<Parcial_II.Models.Rol>

@{
    ViewData["Title"] = "Lista Roles";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary" href="#" data-toggle="modal" data-target="#Ingresorol">Ingrese un Rol</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Rol
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody id="ListaRol"></tbody>
</table>
<div class="modal fade" id="Ingresorol" tabindex="-1" role="dialog" aria-labelledby="EtiquetaModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title"
                    id="EtiquetaModal">
                    Roles
                </h4>
            </div>
            <div class="modal-body">

                <form>
                    <div class="form-group">
                        <label class="control-label">Rol</label>
                        <input id="Nombre" name="Nombre"
                               placeholder="Ingrese el Rol"
                               class="form-control" />
                        <input id="RolId" name="RolId" hidden />
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="guardarrol()">
                    Guardar
                </button>
            </div>
        </div>
    </div>
</div>
